# COMPILER, LIBRARY, AND MACHINE MAKE VARIABLES
SRCDIR= @abs_srcdir@
VPATH=$(SRCDIR)
# FORTRAN COMPILER VARIABLES #

FC		= @FC@
MPIFC          = @MPIFC@
FFLAGS		= @BIT64@ @REAL8@ @ENDIAN@ @FFLAGS@ @FCFLAGS@ 

FOPTS           = @OPT@

INCLUDES        = @INCLUDEPATH@ 

# INCLUDE FLAG FOR LOCATING MODULES (-I, -M, or -p)
MODINC         = @MODINC@

# explicit fortran preprocessing
EXPLICIT_CPP = @EXPLICIT_FPP@

# PREPROCESSOR COMMAND

CPPDEFS	= @CPPDEFS@
# FORTRAN PREPROCESSOR FLAGS
FC_DEFINE = @FC_DEFINE@
FPPDEFS=$(patsubst -D%,$(FC_DEFINE)%,$(CPPDEFS)) $(patsubst -D%,$(FC_DEFINE)%,$(DEFS))

# C COMPILER VARIABLES #

# C COMPILER

CC		= @CC@
MPICC           = @MPICC@
CFLAGS          = @CFLAGS@

# Linking

LDLIBS = @NETCDF_LDFLAGS@ @NETCDF_LIBS@ @MPILIBS@ @LDLIBS@ 


# DIRECTORIES

PIO_PATH       = @PIO_PATH@

PREFIX         = @prefix@
INSTALL_INC    = @prefix@/include
INSTALL_LIB    = @prefix@/lib


# OTHER COMMANDS #
AR		= @AR@
ARFLAGS         = @ARFLAGS@
RM		= @RM@
AWK             = @AWK@


# Sizes (in C)

SIZEOF_CHAR     = @SIZEOF_CHAR@
SIZEOF_INT      = @SIZEOF_INT@
SIZEOF_FLOAT    = @SIZEOF_FLOAT@
SIZEOF_DOUBLE   = @SIZEOF_DOUBLE@
SIZEOF_VOID_P   = @SIZEOF_VOID_P@


